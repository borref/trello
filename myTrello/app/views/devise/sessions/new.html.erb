<div class="devise-view">
  <h1 class="ui centered header">Get your things done with Trello</h1>
  <div class="ui one column stackable center aligned page grid">
    <div class="column eight wide">
      <div class="ui segment">
        <h2 class="ui header">Log in</h2>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'ui form'}) do |f| %>
          <div class="field">
            <div class="ui left icon input">
              <!-- <%= f.label :email %> -->
              <%= f.email_field :email, autofocus: true, placeholder: 'Email' %>
              <%= semantic_icon('user') %>
            </div>
          </div>

          <div class="field">
            <div class="ui left icon input">
              <!-- <%= f.label :password %> -->
              <%= f.password_field :password, autocomplete: "off", placeholder: 'Password' %>
              <%= semantic_icon('key') %>
            </div>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <div class="ui checkbox">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            </div>
          <% end -%>

          <div class="actions">
            <%= f.submit "Log in", {:class => 'ui fluid teal button'} %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>  
    </div>  
  </div>
</div>