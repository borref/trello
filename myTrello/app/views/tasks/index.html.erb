<div id="tasks">
  <h2>Have you ever imagined such an easy way to get your tasks done?&nbsp;
    <%= link_to 'Just create a new task...', new_task_path%>
  </h2>
  <div class="ui grid stackable">
    <div class="ten wide column">
      <div class="ui teal segment">
        <h3 class="ui header">Not finished tasks</h3>
        <div class="ui two column stackable grid">
          <div class="column">
            <div class="ui tasks-board segment">
              <div class="ui top attached label"> Available tasks
                <%= link_to new_task_path do%>
                  <%= semantic_icon('circular plus') %>
                <% end %>
              </div>
              <!-- <h3 class="ui header">Available tasks</h3> -->
              <% unless @available_tasks.empty? %>
                <% @available_tasks.each do |task| %>
                  <%= link_to task do %>
                    <div class="ui task segment">
                      <h4 class="ui header"><%= task.title %>
                        <div class="sub header"><%= task.user.username %></div>
                      </h4>
                      <div class="ui label">
                        <%= semantic_icon('wait') %>
                        <%= task.due_date %>
                      </div>
                    </div>
                  <% end %>
                <% end %>
              <% else %>
                <h4 class="ui header">There's no tasks,&nbsp;
                  <%= link_to 'add one', new_task_path%>
                </h4>
              <% end %>
            </div>
          </div>

          <div class="column">
            <div class="ui tasks-board segment">
              <div class="ui top attached label">Overdue tasks</div>
              <!-- <h3 class="ui header">Overdue tasks</h3> -->
              <% @overdue_tasks.each do |task| %>
                <%= link_to task do %>
                  <div class="ui task segment">
                    <h4 class="sub header"><%= task.title %>
                      <div class="sub header"><%= task.user.username %></div>
                    </h4>
                    <div class="ui label">
                      <%= semantic_icon('wait') %>
                      <%= task.due_date %>
                    </div>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
      
    <div class="five wide column">
      <div class="ui olive segment">
        <h3 class="ui header">Finished tasks</h3>
        <div class="ui one column grid">
          <div class="column">
            <% @finished_tasks.each do |task| %>
              <%= link_to task do %>
                <div class="ui task segment">
                  <h4 class="ui header"><%= task.title %>
                    <div class="sub header"><%= task.user.username %></div>
                  </h4>
                  <div class="ui label">
                    <%= semantic_icon('wait') %>
                    <%= task.due_date %>
                  </div>
                </div>
              <% end %>
            <% end %>
          </div>          
        </div>
      </div>
    </div>
  </div>
</div>

  